<html>
<head>
  <title>Devisetest</title>

  <%= csrf_meta_tags %>


  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body class="hold-transition sidebar-mini layout-fixed">
<div class="wrapper">



  <!-- Navbar -->
  <%= render "layouts/navbar" %>
  <!-- /.navbar -->

  <!-- Main Sidebar Container -->
  <%= render "layouts/sidebar" %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content">

<h1> New JobProfile </h1>
      <div class="card card-primary">
        <div class="card-header">
          <h3 class="card-title">New JobProfile</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <%= form_with(model: @jobprofile, local: true, data: {
          controller: :maps,
          action: "google-maps-callback@window->maps#initializeMap"
        }) do |f| %>
          <% if @jobprofile.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@jobprofile.errors.count, "error") %> prohibited this user from being saved:</h2>

              <ul>
                <% @jobprofile.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="card-body">
            <div class="form-group">


              <label for="exampleInputEmail1">Address</label>

              <%= f.text_field :adresse, autofocus: true,class:"form-control" %>
            </div>
            <div class="form-group">
              <label for="exampleInputEmail1">search</label>

              <%= f.text_field :serach,name: nil, autofocus: true,class:"form-control" , data: { target: "maps.field", action: "keydown->maps#preventSubmit" } %>
            </div>
            <div class="form-group">

              <label for="exampleInputEmail1">Lantitude</label>

              <%= f.text_field :latitude, autofocus: true,class:"form-control", data: { target: "maps.latitude" } %>
            </div>
            <div class="form-group">


              <label for="exampleInputEmail1">longitude</label>

              <%= f.text_field :langitude, autofocus: true,class:"form-control", data: { target: "maps.longitude" } %>
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Ville</label>

              <%= f.text_field :ville, autofocus: true ,class:"form-control"%>
            </div>
            <div class="form-group">
              <label for="exampleInputFile">Gallery</label>
              <div class="input-group">
                <div class="custom-file">

                  <%= f.file_field :gallery, multiple: true ,class:"custom-file-input"%>

                  <label class="custom-file-label" for="exampleInputFile">Choose file</label>
                </div>
                <div class="input-group-append">
                  <span class="input-group-text">Upload</span>
                </div>
              </div>
            </div>
            <div class="form-group">


              <label for="exampleInputEmail1">Tarif</label>

              <%= f.text_field :tarif, autofocus: true,class:"form-control" %>
            </div>
            <div class="field" >
              <%= f.label :user_id ,hidden:true %><br />
              <%= f.text_field :user_id,:value => current_user.id, autofocus: true, hidden: true  %>
            </div>

                  <div class="form-group">
                    <label>Minimal</label>

                    <%= f.select :namejob, Job.all.collect { |p| [ p.name ] },{include_blank: 'selection votre travail' }, { class: "form-control" }%>


                  </div>


          </div>
          <!-- /.card-body -->
          <div class="card-footer">
            <%= content_tag :div, nil, data: { target: "maps.map" }, class: 'map' %>
          <div class="actions">
            <%= f.submit "New JobProfil",class:"btn btn-primary" %>
          </div>

          </div>

      </div>









  
<% end %>

    </div>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  <%= render "layouts/footer" %>
  <!-- /.control-sidebar -->
</div>
<!-- ./wrapper -->


</body>
</html>

