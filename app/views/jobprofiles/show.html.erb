
<body class="hold-transition sidebar-mini layout-fixed">
<div class="wrapper">



  <!-- Navbar -->
  <%= render "layouts/navbar" %>
  <!-- /.navbar -->

  <!-- Main Sidebar Container -->
  <%= render "layouts/sidebar" %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    </br>
    <div class="content">

        <%= link_to  new_jobprofile_demande_path(@jobprofile),class:"btn btn-success " do %>


          Ajouter Demande

        <%end %>


      <div class="container-fluid">
        </br>
        <div class="row">

          <div class="col-md-3">

            <!-- Profile Image -->
            <div class="card card-primary card-outline">
              <div class="card-body box-profile">
                <div class="text-center">


                  <div>
                    <% if @jobprofile.user.avatar.attached? %>
                      <%= image_tag  @jobprofile.user.avatar ,class:"profile-user-img img-fluid img-circle",style: "width: 100px; height:100px; display: block"  %>
                    <% else %>


                        <%= image_tag ("test.png") ,class:"profile-user-img img-fluid img-circle",style: "width: 200px; height:200px; display: block" %>
                        </div>

                    <% end %>
                    </div>

                <h3 class="profile-username text-center"><%= @jobprofile.user.full_name %> </h3>

                <p class="text-muted text-center"><%= @jobprofile.user.email %></p>

                <div class="average-review-rating" data-score=<%= @average_review %>></div>
                <ul class="list-group list-group-unbordered mb-3">
                  <li class="list-group-item">
                    <p>&nbsp;&nbsp;&nbsp;<strong>Ville: &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; </strong> <%= @jobprofile.ville %> </p>
                  </li>
                  <li class="list-group-item">
                    <p>&nbsp;&nbsp;&nbsp;<strong>Adresse:&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;</strong> <%= @jobprofile.adresse %> </p>
                  </li>
                  <li class="list-group-item">
                    <p>&nbsp;&nbsp;&nbsp;<strong>Gallery:&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;</strong> <div class="flat-content">
                    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                      <div class="carousel-inner">
                        <!-- Vous pouvez remplacer @flat par votre modèle -->
                        <% @jobprofile.gallery.each_with_index do |gallery, index| %>

                          <div class="carousel-item <%= "active" if index == 0%>">

                            <%= image_tag gallery, height: 150, width: 150 %>
                          </div>
                        <% end %>
                      </div>
                      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                      </a>
                      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                      </a>
                    </div>
                  </div> </p>
                  </li>
                  <li class="list-group-item">
                    <p>&nbsp;&nbsp;&nbsp;<strong>Tarif:&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;</strong> <%= @jobprofile.tarif %> </p>
                  </li>
                  <li class="list-group-item">
                    <p>&nbsp;&nbsp;&nbsp;<strong>Name of Job:&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;</strong> <%= @jobprofile.namejob  %> </p>
                  </li>
                </ul>


              </div>
              <!-- /.card-body -->
            </div>

          </div>
        </div>

          <div class="col-md-3">

            <!-- Profile Image -->
            <div class="card card-primary card-outline">
              <div class="card-body box-profile">




                <h2 class="subtitle is-5"><strong><%=  @jobprofile.comments.count %></strong> Comments</h2>
                <%= render @jobprofile.comments %>



                <div class="comment-form">
                  <hr />
                  <div class="text-center">
                    <h3 class="subtitle is-3">Answer</h3>
                  </div>
                  <%= render 'comments/form' %>
                </div>





              </div>
              <!-- /.card-body -->
            </div>
          </div>
        <div class="col-md-6">

          <!-- Profile Image -->
          <div class="card card-primary card-outline">
            <div class="card-body box-profile">







              <table class="table table-striped">
  <thead>
  <tr>

    <th>Date Début</th>
    <th>Date Fin</th>
    <th>Nombre de jour</th>
    <th>Status</th>
    <th>Technicien</th>
 
  </tr>
  </thead>

  <tbody>

  <% @plannings.each do |planning| %>
    <tr>

      <td><%= planning.date_debut %> </td>

      <td><%= planning.date_fin %></td>
       <td><%=   (planning.date_fin.to_date - planning.date_debut.to_date ).to_i %>  Jour</td>
      <% if planning.status == 'disponible' %>
        <td> <strong><p class="text-success"><%= planning.status %></p></strong></td>
      <%end %>
      <% if planning.status == 'engagées' %>
        <td> <strong><p class="text-danger"><%= planning.status %></p></strong></td>
      <%end %>
      <td> <%= planning.jobprofile.user.full_name %></strong></h5></td>
      

    </tr>
  <% end %>
  </tbody>
</table>



            </div>

          </div>

            </div>
            <!-- /.card-body -->
          </div>
        </div>
        </div>

    </div>





    <!-- /.content -->

  </div></div>
  <!-- /.content-wrapper -->
  <%= render "layouts/footer" %>
  <!-- /.control-sidebar -->

</div>
<!-- ./wrapper -->
<script>
    $('.star_rating').raty({

        readOnly: true,
        path: '/assets/',
        score: function () {
            return $(this).attr('data_score');

        }

    });
</script>



<script>
    $('#rating-form').raty({
        path: '/assets/',
        scoreName: 'comment[rating]'
    });
</script>


<script>
    $('.review-rating').raty({
        readOnly: true,
        score: function() {
            return $(this).attr('data-score');
        },
        path: '/assets/'
    });
</script>


<script>
    $('.average-review-rating').raty({
        readOnly: true,
        path: '/assets/',
        score: function() {
            return $(this).attr('data-score')
        }
    });
</script>

</body>
