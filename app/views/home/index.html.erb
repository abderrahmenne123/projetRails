<head>
  <title>Devisetest</title>

  <%= csrf_meta_tags %>

  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body class="content-wrapper",style="min-height: 1604.8px;" >


<nav class="navbar navbar-expand-lg navbar navbar-light" style="background-color: #e3f2fd;">
  <% if user_signed_in? %>
    <%=  link_to  home_private_path,class:"navbar-brand" do  %>





      <%= image_tag ("workk.jpg"), width:"40" ,height:"40",class:"img-circle elevation-2"%>
      <span class="brand-text font-weight-light">Work</span>
    <%end %>
  <% else %>
    <a class="navbar-brand" href="/">

      <%= image_tag ("workk.jpg"), width:"40" ,height:"40",class:"img-circle elevation-2"%>
      <span class="brand-text font-weight-light">Work</span>
    </a>
  <%end  %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNavDropdown">

    <ul class="navbar-nav">

      <% if user_signed_in? %>



      <% else %>




        <li class="nav-item">
          <%=  link_to  new_user_session_path,class:"nav-link" do  %>
            Se connecter

          <%end %>
        </li>
        &nbsp;&nbsp;&nbsp;
        <li class="nav-item">
          <%=  link_to  new_user_registration_path,class:"nav-link" do %>

            S'inscrire

          <% end %>
        </li>
      <% end %>
    </ul>

  </div>
  <%= form_tag root_path, :method => 'get',class:"form-inline" do %>


    <%= text_field_tag :mot_cherche, params[:mot_cherche],class:"form-control mr-sm-2" ,placeholder: "Search",type:"search"%> 

    <%= submit_tag "Search" , class: "btn btn-outline-success my-2 my-sm-0" %>


  <% end %>
</nav>

<div class="container">
<div class="row">
  <div class="col-3">
    <%= form_tag root_path, :method=>"get" do %>


      <h3>tarifs</h3>
      <%= check_box_tag :tarif,1 %>
      <span> <50 </span><br>
      <%= check_box_tag :tarif,2 %>
      <span> <100</span><br>
      <%= check_box_tag :tarif,3 %>
      <span><200</span><br>
      <hr>
      <h3>ville</h3>
      <%@villes.each do |ville| %>
      <%= check_box_tag :ville ,ville %>


        <%= ville%><br>
        <%end %><hr>
      <h3>job</h3>
      <%@jobs.each do |namejob| %>
        <%= check_box_tag :namejob,  namejob %>


        <%= namejob%><br>
      <%end %><hr>
       
    <%= submit_tag "Search" , class: "btn btn-outline-success my-2 my-sm-0" %>
    <%end%>
  </div>
<div class="col-9">





  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <%= yield %>


  <p>
  <div class="popin">
  <div style='width: 100%'>
    <div id="map" style='width:100%; height: 500px;'></div>
  </div>
  </div>
  <script type="text/javascript">
      handler = Gmaps.build('Google');
      handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
          markers = handler.addMarkers(<%=raw @hash.to_json %>);
          handler.bounds.extendWith(markers);
          handler.fitMapToBounds();
      });
  </script>

  </p>
  <div class="row row-cols-1 row-cols-md-4" style="max-width: 75rem;">

    <% @jobprofiles.each do |jobprofile| %>
      <div class="col-md-4 " >
        <div class="card" style="width:100%;">
          <div class="flat-content">
            <div id="carouselExampleControls<%=jobprofile.id%>" class="carousel slide" data-ride="carousel">
              <div class="carousel-inner">
                <!-- Vous pouvez remplacer @flat par votre modÃ¨le -->
                <% jobprofile.gallery.each_with_index do |gallery, index| %>

                  <div class="carousel-item <%= "active" if index == 0  %>">

                    <%= image_tag gallery, height: 200, width: 300  %>

                  </div  >
                <% end %>

              </div>
              <a class="carousel-control-prev" href="#carouselExampleControls<%=jobprofile.id%>" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselExampleControls<%=jobprofile.id%>" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
          </div>

          <div class="card-body">

            <h5 class="card-title"><strong>



              Technicien :

              <div class="image">
                <% if jobprofile.user.avatar.attached? %>
                  <%= image_tag jobprofile.user.avatar , width:"50" ,height:"50",class:"img-circle elevation-2" %>
                <% else %>
                  <%= image_tag ("aa.png") , width:"50" ,height:"50",class:"img-circle elevation-2" %>
                <%end %>
              </div>

              <%= jobprofile.user.full_name %></strong></h5>

            <p class="card-text"><strong> Adresse : <%= jobprofile.full_country %> </strong></p>
            <p class="card-text"><strong> Job :   <%= jobprofile.namejob %>
            </strong></p>
            <%= link_to 'Show', jobprofile ,class: "btn btn-primary" %>

          </div>
        </div>
      </div>

    <% end %>

  </div>
  <%= paginate @jobprofiles %>

</div>
</div>
</div>
</div>




<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

