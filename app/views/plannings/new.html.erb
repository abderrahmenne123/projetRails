<html>
<head>
  <title>Devisetest</title>

  <%= csrf_meta_tags %>


  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body class="hold-transition sidebar-mini layout-fixed">
<div class="wrapper">



  <!-- Navbar -->
  <%= render "layouts/navbar" %>
  <!-- /.navbar -->

  <!-- Main Sidebar Container -->
  <%= render "layouts/sidebar" %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content">



      <%= form_with(model: @planning, local: true) do |f| %>
        <% if @planning.errors.any? %>
          <div id="error_explanation">
            <div class=" alert alert-danger">
              <h2><%= pluralize(@planning.errors.count, "error") %> prohibited this user from being saved:</h2>

              <ul>
                <% @planning.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>
        </br>
        <div class="col-md-6">
          <div class="card card-secondary">
            <div class="card-header">
              <h3 class="card-title"> New Planning of Technicien </h3>

              <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                  <i class="fas fa-minus"></i>
                </button>
              </div>
            </div>
            <div class="card-body">
              <div class="form-group">
                <label for="inputName">Date Début</label>

                <%= f.text_field :date_debut,

                    data: {
                      controller: "flatpickr",
                      flatpickr_alt_format: t("date.formats.long"),
                      flatpickr_date_format: "%B %d, %Y",
                      flatpickr_alt_input: true,
                      flatpickr_min_date: Time.zone.now
                    }, autofocus: true,class:"form-control" %>

              </div>
              <div class="form-group">
                <label for="inputName">Date Fin</label>

                <%= f.text_field :date_fin, data: {
                  controller: "flatpickr",
                  flatpickr_alt_format: t("date.formats.long"),
                  flatpickr_date_format: "%B %d, %Y",
                  flatpickr_min_date: Time.zone.now,
                  flatpickr_alt_input: true,
                } %>

              </div>
              <div class="form-group">
                <div class="field">
                  <%= f.label :status %><br />
                   <%= f.radio_button :status ,:disponible %>
                 <%= f.label :status, " Disponible",class:"text-success", :value => "disponible"  %> &nbsp; &nbsp;

                  <%= f.radio_button :status, :engagées, :checked => :status %>
                  <%= f.label :status, "Engagées",class:"text-danger", :value => "engagées" %> &nbsp; &nbsp;

                </div>
              </div>
              <div class="form-group">
                <div class="field" >
                  <%= f.label :jobprofile_id ,hidden:true%><br />
                  <%= f.text_field :jobprofile_id,:value => current_user.jobprofile.id, autofocus: true,hidden:true  %>
                </div>
              </div>
              <div class="row">
                <div class="col-6">

                  <div class="actions">
                    <%= f.submit "Create New Planning" ,class:"btn btn-success float-right"%>
                  </div>

                </div>
              </div>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>



        </div>
      <% end %>

      <!-- /.content -->
      </div>
  <!-- /.content-wrapper -->
  <%= render "layouts/footer" %>
  <!-- /.control-sidebar -->
</div>
<!-- ./wrapper -->


</body>
</html>

